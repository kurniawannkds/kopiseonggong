        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".module.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.home.HomeActivity"/>
        <activity android:name=".module.stock.StockActivity"/>
        <activity android:name=".module.resep.ResepActivity"/>
        <activity android:name=".module.transaction.TransactionActivity"/>
        <activity android:name=".module.wallet.WalletActivity"/>
        <activity android:name=".module.addTransaction.AddTransactionActivity"/>
    </application>

</manifest>