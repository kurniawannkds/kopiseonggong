<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/ly_dialog_layout_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible">

        <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/recycle_view_detail_trans"-->
        <!--android:layout_width="1000dp"-->
        <!--android:layout_height="600dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--app:cardBackgroundColor="@color/colorCardView"-->
        <!--app:cardCornerRadius="10dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:layout_marginBottom="55dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/title_info"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/layout_relatif_category"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Category" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_category"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_relatif_date"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_date"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_relatif_time"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Time" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_time"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_relatif_price"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Price" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_price"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_relatif_payment"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Payment Type" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_payment"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_relatif_ket"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Payment Type" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_ket"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title_info"
                        style="@style/TextViewStyleHeaderAddDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Insert Transaction" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/layout2"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_info2"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relatif_list"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/layout_relatif_produk"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        android:id="@+id/tv_detail_produk_title"
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Detail Product" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_product"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_relatif_jumlah"
                                style="@style/LayoutDropDownAdd"
                                android:background="@drawable/bg_dropdown"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginBottom="3dp"
                                    android:soundEffectsEnabled="false"
                                    android:src="@drawable/ic_keyboard_arrow_down"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        style="@style/TextViewJudulDropDown"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Detail" />

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tv_jumlah"
                                        style="@style/TextViewIsiDropDownAdd"
                                        android:singleLine="true"
                                        android:text="" />

                                </LinearLayout>

                            </RelativeLayout>

                            <Button
                                android:id="@+id/btn_add_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Add Detail" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/relatif_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.CoordinatorLayout
                                android:id="@+id/contraint_rv_add"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_transaction_add"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_margin="15dp" />

                            </android.support.design.widget.CoordinatorLayout>

                            <android.support.design.widget.CoordinatorLayout
                                android:visibility="gone"
                                android:id="@+id/contraint_rv_add_expense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_transaction_add_expense"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_margin="15dp" />

                            </android.support.design.widget.CoordinatorLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title_info2"
                        style="@style/TextViewStyleHeaderAddDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Insert Detail Transaction" />


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_close" />

                <RelativeLayout
                    android:id="@+id/layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/TextViewStyleHeaderUtamaAddDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:text="Add New Transaction" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btn_submit_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Submit Transaction" />

            </RelativeLayout>

        </RelativeLayout>

        <include
            android:id="@+id/ly_black"
            layout="@layout/layout_black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <include
                android:id="@+id/ly_done_edit_text"
                layout="@layout/dialog_edit_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <include
                android:id="@+id/ly_dialog_custome_list"
                layout="@layout/dialog_custome_list" />

        </RelativeLayout>

        <View
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/colorBlack"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/pb_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</layout>