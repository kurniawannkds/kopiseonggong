<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/ly_dialog_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/recycle_view"
            android:layout_width="450dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/colorCardView"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/layout_view_pager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp">

                        <me.grantland.widget.AutofitTextView
                            android:singleLine="false"
                            android:id="@+id/tv_edit_text_label"
                            android:layout_width="350dp"
                            android:layout_height="100dp"
                            style="@style/TextViewStyleHeader1"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:text="Masukan"/>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_marginTop="50dp"
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

<!--                        <EditText-->
<!--                            android:visibility="gone"-->
<!--                            android:id="@+id/et_number"-->
<!--                            android:layout_width="400dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:textSize="30sp"-->
<!--                            android:hint="halo"-->
<!--                            android:inputType="numberDecimal"-->
<!--                            android:layout_centerHorizontal="true"-->
<!--                            android:layout_centerVertical="true"/>-->

                        <com.aldoapps.autoformatedittext.AutoFormatEditText
                            android:maxLength="15"
                            android:textSize="30sp"
                            app:isDecimal="true"
                            style="@style/TextViewStyle6"
                            android:id="@+id/et_number"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:hint="Number only"
                            android:inputType="phone"
                            />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/et_karakter"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:hint="halo"
                            android:inputType="text"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_done_edit_text"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:textSize="23sp"
                        android:text="Done"
                        android:layout_below="@+id/layout2"/>

                </RelativeLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>