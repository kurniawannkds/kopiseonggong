<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/ly_dialog_layout_detail_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/recycle_view_detail_trans"
            style="@style/LayoutDialog"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/colorCardView"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:visibility="gone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/password"
                        android:layout_toRightOf="@+id/layout_title"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>

                    <RelativeLayout
                        android:id="@+id/layout_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextViewStyleHeader1"
                            android:layout_centerHorizontal="true"
                            android:text="Detail Product Transaction"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_centerHorizontal="true">


                    <LinearLayout
                        android:id="@+id/layout_linear_biasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_info"
                        android:orientation="vertical"
                        android:visibility="visible">

                        //1

                        <LinearLayout
                            android:id="@+id/layout_linear_info1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/oval_abu" />

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:id="@+id/tv_product_title"
                                style="@style/TextViewDetailDialogKiri"
                                android:text="" />

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:id="@+id/tv_product_name"
                                style="@style/TextViewDetailDialogKanan"
                                android:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/oval_abu" />

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:id="@+id/tv_total_title"
                                style="@style/TextViewDetailDialogKiri"
                                android:text="" />

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:id="@+id/tv_total_product"
                                style="@style/TextViewDetailDialogKanan"
                                android:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_resep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/oval_abu" />

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                style="@style/TextViewDetailDialogKiri"
                                android:text="Product Resep" />

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:id="@+id/tv_resep"
                                style="@style/TextViewDetailDialogKanan"
                                android:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_cat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp">

                            <ImageView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/oval_abu"/>

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:text="Product Category"
                                style="@style/TextViewDetailDialogKiri"/>

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:id="@+id/tv_category"
                                style="@style/TextViewDetailDialogKanan"
                                android:text="" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/btn_oke"
                        android:layout_width="150dp"
                        android:background="@drawable/bg_button"
                        android:layout_height="30dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:text="Oke"/>

                </RelativeLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>