<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent2">

        <include
            android:id="@+id/ly_header_data"
            layout="@layout/header_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ly_header_data"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center_vertical">

                        <com.razerdp.widget.animatedpieview.AnimatedPieView
                            android:id="@+id/mainPieChart"
                            android:layout_centerHorizontal="true"
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:minHeight="400dp"
                            android:minWidth="400dp" />

                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mainPieChart"
                            android:background="@null"
                            android:orientation="horizontal">
                            //need
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mainPieChart"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentTop="true"
                                    android:background="#37DC74"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=" Income"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="17sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="#FFA340"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=" Tax"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="17sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="#f5211d"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=" Expense"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="17sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutAtasAvalaible"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_round_edittext"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Available Balance"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <me.grantland.widget.AutofitTextView
                            android:layout_gravity="center_horizontal"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:id="@+id/tv_avalaible_balance"
                            android:layout_width="500dp"
                            android:layout_height="wrap_content"
                            android:text="" />


                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorBlack"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/layoutAtasAvalaible"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">

                            //Total Income

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:src="@drawable/icons8_request_money_48"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cash In"
                                        android:textSize="20sp" />

                                    //Total Expense

                                    <me.grantland.widget.AutofitTextView
                                        android:singleLine="true"
                                        android:id="@+id/tv_total_income"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:layout_marginBottom="7dp"
                                        android:textSize="17sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/icons8_initiate_money_transfer_48"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cash Out"
                                        android:textSize="20sp" />
                                    <me.grantland.widget.AutofitTextView
                                        android:singleLine="true"
                                        android:textAlignment="center"
                                        android:id="@+id/tv_total_expense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginBottom="7dp"
                                        android:textSize="17sp" />

                                </LinearLayout>
                            </LinearLayout>
                            //Total Current Saving

                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Tax"
                                android:textSize="20sp" />

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:id="@+id/tv_total_tax"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="7dp"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorBlack"
                            android:layout_margin="10dp"
                            android:layout_below="@+id/layoutAtasAvalaible"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total Balance/month"
                            android:textSize="20sp" />

                        <android.support.design.widget.CoordinatorLayout
                            android:id="@+id/contraint_rv_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:layout_margin="15dp"
                                android:id="@+id/rv_transaction_wallet"
                                android:layout_width="match_parent"
                                android:layout_height="90dp" />

                        </android.support.design.widget.CoordinatorLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

        <include
            android:id="@+id/ly_black"
            layout="@layout/layout_black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorNavigation"
            android:layout_alignParentBottom="true">

            <include
                android:id="@+id/ly_bottom_nav"
                layout="@layout/bottom" />

        </RelativeLayout>

        <View
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/colorBlack"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/pb_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</layout>