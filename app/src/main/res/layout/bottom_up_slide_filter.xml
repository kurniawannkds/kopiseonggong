<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="150dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:id="@+id/linear_awal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Filter by"
                style="@style/TextViewStyleHeader4"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_awal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/relatif_category_choosen"
                android:visibility="gone"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/border_choosen">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/bill"
                        />

                    <me.grantland.widget.AutofitTextView
                        android:singleLine="true"
                        android:id="@+id/tv_filter_cat"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="Category"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relatif_category_not_choosen"
                android:layout_width="95dp"
                android:layout_height="95dp">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/bill"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="Category"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/relatif_method_choosen"
                android:layout_marginLeft="10dp"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/border_choosen">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/piggybank"
                        />

                    <me.grantland.widget.AutofitTextView
                        android:singleLine="true"
                        android:id="@+id/tv_filter_method"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="Method"
                        android:textAlignment="center"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relatif_method_not_choosen"
                android:layout_marginLeft="10dp"
                android:layout_width="95dp"
                android:layout_height="95dp">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/piggybank"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:text="Method"
                        android:textAlignment="center"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_gambar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_awal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/relatif_date_choosen"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/border_choosen">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/notificationbell"
                        />

                    <me.grantland.widget.AutofitTextView
                        android:singleLine="true"
                        android:id="@+id/tv_filter_date"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="Date"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/relatif_date_not_choosen"
                android:layout_width="95dp"
                android:layout_height="95dp">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/notificationbell"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="Date"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/relatif_user_choosen"
                android:layout_marginLeft="10dp"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/border_choosen">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/cart_real"
                        />

                    <me.grantland.widget.AutofitTextView
                        android:singleLine="true"
                        android:id="@+id/tv_filter_user"
                        android:layout_width="90dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="User"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relatif_user_not_choosen"
                android:layout_marginLeft="10dp"
                android:layout_width="95dp"
                android:layout_height="95dp">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/cart_real"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="User"
                        style="@style/TextViewStyle3"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_sumbit"
            android:layout_width="290dp"
            android:background="@drawable/bg_button"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:text="Sumbit"/>

    </LinearLayout>

</layout>